                                <input type="text" class="form-control" placeholder="John" id="Fullname" name="Fullname" value="@Model.Data.Fullname">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Select position:</label>
                                <select name="Position" id="Position" data-placeholder="Select position" class="select">
